server {
    listen 80;
    server_name {{ ansible_fqdn }};  # Fully Qualified Domain Name or adjust as needed

    location / {
        proxy_pass http://{{ hostvars['jenkins_master']['ansible_host'] | default(inventory_hostname) }}:8080;  # Fetch the IP address of jenkins_master dynamically
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
